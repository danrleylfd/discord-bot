{
  "compilerOptions": {
    "types": [
      "node"
    ],
    "module": "CommonJS",
    "target": "ES2018",
    "outDir": "dist",
    "lib": [
      "ESNext",
      "ESNext.Array",
      "ESNext.AsyncIterable",
      "ESNext.Intl",
      "ESNext.Symbol",
      "DOM"
    ],
    "sourceMap": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "incremental": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": [
    "app.*",
    "env.ts",
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
  ]
}
